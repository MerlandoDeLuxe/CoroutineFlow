<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.MainActivity">

    <Button
        android:id="@+id/buttonUserActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="#2196F3"
        android:padding="10dp"
        android:text="User Activity"
        android:textAllCaps="true"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCryptoActivity"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Crypto Activity"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cornerRadius="20dp"
        android:textAllCaps="true"
        android:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonUserActivity" />

    <Button
        android:id="@+id/buttonTeamScore"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Team Score"
        android:layout_margin="10dp"
        android:padding="10dp"
        app:cornerRadius="20dp"
        android:textAllCaps="true"
        android:backgroundTint="#2196F3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCryptoActivity" />
</androidx.constraintlayout.widget.ConstraintLayout>